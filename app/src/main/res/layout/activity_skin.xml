<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkinActivity"
    android:background="@drawable/bcg3">

    <ImageButton
        android:id="@+id/skin1Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBtn"
        app:srcCompat="@drawable/skin1" />

    <ImageButton
        android:id="@+id/skin2Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/skin3Id"
        app:layout_constraintStart_toEndOf="@+id/skin1Id"
        app:layout_constraintTop_toBottomOf="@+id/backBtn"
        app:srcCompat="@drawable/skin2" />

    <ImageButton
        android:id="@+id/skin3Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBtn"
        app:srcCompat="@drawable/skin3" />

    <ImageButton
        android:id="@+id/skin4Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/skin4" />

    <ImageButton
        android:id="@+id/skin5Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/skin6Id"
        app:layout_constraintStart_toEndOf="@+id/skin4Id"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/skin5" />

    <ImageButton
        android:id="@+id/skin6Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/skin6"/>

    <ImageButton
        android:id="@+id/skin7Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/skin8Id"
        app:layout_constraintStart_toEndOf="@+id/sarny_skinId"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/skin7" />

    <ImageButton
        android:id="@+id/skin8Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/skin8" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/good_times"
        android:text="Choose your skin"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <ImageButton
        android:id="@+id/sarny_skinId"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/sarny_skin" />

    <TextView
        android:id="@+id/coinsId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/good_times"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/coinId"
        app:layout_constraintStart_toStartOf="@+id/coinId"
        app:layout_constraintTop_toBottomOf="@+id/coinId"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/good_times"
        android:text="200"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/skin3Id"
        app:layout_constraintStart_toStartOf="@+id/skin3Id"
        app:layout_constraintTop_toBottomOf="@+id/skin3Id"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/good_times"
        android:text="FREE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/skin2Id"
        app:layout_constraintStart_toStartOf="@+id/skin2Id"
        app:layout_constraintTop_toBottomOf="@+id/skin2Id"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/good_times"
        android:text="FREE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/skin1Id"
        app:layout_constraintStart_toStartOf="@+id/skin1Id"
        app:layout_constraintTop_toBottomOf="@+id/skin1Id"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/good_times"
        android:text="200"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/skin4Id"
        app:layout_constraintStart_toStartOf="@+id/skin4Id"
        app:layout_constraintTop_toBottomOf="@+id/skin4Id"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/good_times"
        android:text="400"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/skin5Id"
        app:layout_constraintStart_toStartOf="@+id/skin5Id"
        app:layout_constraintTop_toBottomOf="@+id/skin5Id"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/good_times"
        android:text="1000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/skin6Id"
        app:layout_constraintStart_toStartOf="@+id/skin6Id"
        app:layout_constraintTop_toBottomOf="@+id/skin6Id"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/coinId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coin" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/good_times"
        android:text="1500"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/sarny_skinId"
        app:layout_constraintStart_toStartOf="@+id/sarny_skinId"
        app:layout_constraintTop_toBottomOf="@+id/sarny_skinId" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/good_times"
        android:text="2000"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/skin7Id"
        app:layout_constraintStart_toStartOf="@+id/skin7Id"
        app:layout_constraintTop_toBottomOf="@+id/skin7Id" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/good_times"
        android:text="3000"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/skin8Id"
        app:layout_constraintStart_toStartOf="@+id/skin8Id"
        app:layout_constraintTop_toBottomOf="@+id/skin8Id" />

</androidx.constraintlayout.widget.ConstraintLayout>